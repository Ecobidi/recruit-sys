<%- include ('../partials/top') %>   
<div class="row space">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-2">
      <h3 class="page-title">New Company</h3>
    </div>
  </div> 
</div>
<div class="row pb-2">
  <div class="col-12">
    <form action="/admin/companies/new" method="POST" class="card">
      <% if (error_msg && error_msg.length > 0) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><%= error_msg %></strong> 
        </div>
        <script>
          $(".alert").alert();
        </script>
      <% } %>

      <fieldset class="row card-body">
        <div class="col-12">
          <legend class="ml-0">Details</legend>
        </div>
        <div class="form-group col-md-4">
          <label>Company Name: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="name">
        </div>
        <div class="form-group col-md-4">
          <label>Address: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="address">
        </div>
        <div class="form-group col-md-4">
          <label>City, State Sited: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="town_state" placeholder="town, state">
        </div>
        <div class="form-group col-md-4">
          <label>Contact Phone: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="phone">
        </div>
        <div class="form-group col-md-4">
          <label>Email: <strong class="text-danger">*</strong></label>
          <input type="email" class="form-control" name="email">
        </div>
        <div class="form-group col-md-4">
          <label>Brief Description: <strong class="text-danger">*</strong></label>
          <textarea type="description" class="form-control" name="description"></textarea>
        </div>
      </fieldset>
     
      <div class="form-group mt-4">
        <button class="btn btn-primary form-control" type="submit">Submit</button>
      </div>
    </form>
  </div>
</div>

</main>

<%- include ('../partials/bottom') %>   
