<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
<link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css">
<link rel="stylesheet" href="/css/app.css" type="text/css">
<title><%= appname %></title>
</head>
<body style="background-color: rgb(0 0 0 / 8%);">
	<nav class="navbar navbar-dark bg-dark">
		<a class="navbar-brand" href="/client"><%= appname %></a>
		<div>
      <a class="btn btn-outline-light" style="border: none;" href="/client">Home</a>
			<a class="btn btn-outline-light" style="border: none;" href="/client/profile">Profile</a>
			<a class="btn btn-outline-light" style="border: none;" href="/client/logout">Logout</a>
		</div>
	</nav>
	
	<div class="container bg-white">
		<div class="row">
      <div class="col-12 border-bottom pb-2 my-4">
        <h3 class="page-title">Jobs Applied For</h3>
      </div>
    </div>
    
    <div class="row">
      <div class="col-12">
        <% if (success_msg && success_msg.length > 0) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong><%= success_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
        <table class="table table-striped table-bordered">
          <thead class="font-weight-bold">
            <tr>
              <td>#</td>
              <td>Position</td>
              <td>Company</td>
              <td>Status</td>
              <td></td>
            </tr>
          </thead>
          <tbody>
            <% if (job_applications.length == 0) { %>
              <tr style="background-color: inherit;">
                <td colspan="9" class="bg-light">
                  <div class="py-2 text-center">
                    <h4 class="lead"><i class="fa fa-search-minus" aria-hidden="true"></i> No Result(s) Found</h4>
                  </div>
                </td>
              </tr>
            <% } %>
            <% job_applications.forEach((m) => { %>
              <tr> 
                <td><%= m.serial_number %></td>
                <td><span><%= m.job_position %></span></td>
                <td><span><%= m.company_name %></span></td>
                <td><span><%= m.status %></span></td>
                <td><span><%= m.createdAt.toLocaleDateString() %></span></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
	</div>

	<script src="/js/jquery.min.js"></script>
	<script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>